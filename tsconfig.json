{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["./firebase.d.ts", "react", "react-native"],
    "strict": true,
    "baseUrl": ".",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "app",
    "components",
    "context",
    "services",
    "types",
    "global.css",
    "nativewind-env.d.ts",
    "firebase.d.ts",
    "lib/firebase.ts", 
    "lib/storage.ts"  ]
}